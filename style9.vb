.container
{
    height:680px;
    width:800px;
    margin:auto;
    background-attachment:scroll;
}
fieldset
{
    background-color: #fff;
    border:1px solid #ccc;
}
input[type="text"],
input[type="email"],
input[type="number"],
input[type="gender"],
select,
textarea
{
    width=100%;
    border:1px solid black;
    border-radius:5px;
    padding: 10px 15px;
    margin:  10px 15px;
    box-sizing: border-box;
    
}
.boldd
{
    font-weight: bold;
}